    }\r\n\r\n      if (this.formData.mensaje.trim() === '') {\r\n        this.errors.mensaje = 'El mensaje es obligatorio.';\r\n        isValid = false;\r\n      }\r\n\r\n      return isValid;\r\n    },\r\n  },\r\n}\r\n</script>\r\n\r\n<style>\r\n.error {\r\n  color: rgba(255, 0, 119, 0.425);\r\n}\r\n\r\n.form-label {\r\n  font-weight: bold;\r\n  display: block;\r\n  font-size: 20px;\r\n  font-weight: bold;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.form-control {\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.btn-primary {\r\n  background-color: #007bff;\r\n  border-color: #007bff;\r\n}\r\n\r\n.btn-primary:hover {\r\n  background-color: #0069d9;\r\n  border-color: #0062cc;\r\n}\r\n\r\nform input[type=\"text\"],\r\nform input[type=\"email\"],\r\nform textarea {\r\n  border: 2px solid #ccc;\r\n  font-size: 18px;\r\n  padding: 10px;\r\n  width: 98%;\r\n}\r\n\r\nform input[type=\"submit\"] {\r\n  background-color: #003366;\r\n  border: none;\r\n  color: #fff;\r\n  cursor: pointer;\r\n  font-size: 20px;\r\n  padding: 10px 20px;\r\n}\r\n</style>\r\n"],"mappings":"AA4BA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE;QACRC,KAAK,EAAE,EAAE;QACTC,OAAO,EAAE;MACX,CAAC;MACDC,MAAM,EAAE,CAAC,CAAC;MACVC,cAAc,EAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAI,CAACH,MAAK,GAAI,CAAC,CAAC,EAAE;;MAElB;MACA,IAAI,CAAC,IAAI,CAACI,YAAY,CAAC,CAAC,EAAE;QACxB;MACF;;MAEA;MACAT,KAAI,CACDU,IAAI,CAAC,iCAAiC,EAAE,IAAI,CAACR,QAAQ,EACrDS,IAAI,CAACC,QAAO,IAAK;QAChB;QACAC,OAAO,CAACC,GAAG,CAACF,QAAQ,CAACX,IAAI,CAAC;QAC1B,IAAI,CAACK,cAAa,GAAI,IAAI;MAC5B,CAAC,EACAS,KAAK,CAACC,KAAI,IAAK;QACd;QACAH,OAAO,CAACG,KAAK,CAACA,KAAK,CAAC;MACtB,CAAC,CAAC;IACN,CAAC;IACDP,YAAYA,CAAA,EAAG;MACb;MACA,IAAIQ,OAAM,GAAI,IAAI;MAElB,IAAI,IAAI,CAACf,QAAQ,CAACC,KAAK,CAACe,IAAI,CAAC,MAAM,EAAE,EAAE;QACrC,IAAI,CAACb,MAAM,CAACF,KAAI,GAAI,uCAAuC;QAC3Dc,OAAM,GAAI,KAAK;MACjB;MAEA,IAAI,IAAI,CAACf,QAAQ,CAACE,OAAO,CAACc,IAAI,CAAC,MAAM,EAAE,EAAE;QACvC,IAAI,CAACb,MAAM,CAACD,OAAM,GAAI,4BAA4B;QAClDa,